# FORGE CONFIG (DOT NOT REMOVE!)
include forge-conf/beta.metadataregistry.org/before/*;

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name beta.metadataregistry.org;
    root /home/forge/beta.metadataregistry.org/web;


    index index.php;

    charset utf-8;

    # FORGE CONFIG (DOT NOT REMOVE!)
    include forge-conf/beta.metadataregistry.org/server/*;

    # strip trailing slashes
    rewrite ^/(.*)/$ /$1 permanent;

    location / {
        try_files $uri /index.php?$query_string @rewriteapp;
    }

    location @rewriteapp {
        if ($request_uri ~ ^/(.*)\.html$) {
            return 302 /$1;
            }
    }

    location = /favicon.ico { access_log off; log_not_found off; }
    location = /robots.txt  { access_log off; log_not_found off; }

    access_log off;
    error_log  /var/log/nginx/beta.metadataregistry.org-error.log error;

    error_page 404 /index.php;

    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php7.1-fpm.sock;
        fastcgi_index index.php;
        include fastcgi_params;
        fastcgi_param PATH_INFO $fastcgi_path_info;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        fastcgi_read_timeout 1d;
    }

    location ~ /\.ht {
        deny all;
    }

    location ~* \.(ico|css|js|gif|jpe?g|png)(\?[0-9]+)?$ {
        add_header Pragma public;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
        expires 30d;
    }
}

# FORGE CONFIG (DOT NOT REMOVE!)
include forge-conf/beta.metadataregistry.org/after/*;

